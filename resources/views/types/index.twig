{% extends layout('posts') %}

{% block content %}
    <div id="posts">

        <header>

            <h1>{{ type.title }}</h1>

            {% if type.description %}
                <p>{{ type.description|raw }}</p>
            {% endif %}

        </header>

        {% include "anomaly.module.posts::posts/partials/posts" with {"posts": posts} %}

        {{ posts.links|raw }}

    </div>
{% endblock %}
