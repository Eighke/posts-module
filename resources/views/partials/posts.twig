<section id="posts">
    {% for post in posts %}
        <div class="post">

            <h1 class="title">
                <a href="{{ url(post.path) }}">
                    {{ post.title }}
                </a>
            </h1>

            {% if post.excerpt %}
                <p>
                    {{ post.excerpt|raw }}
                </p>
            {% endif %}

            <div class="meta">
                <span class="date">
                    {{ post.posted_at|date(config_get('streams::datetime.date_format')) }}
                </span>

                {% if post.category %}
                    <span class="category">
                        {{ post.category.name }}
                    </span>
                {% endif %}

                {% if post.tags %}
                    <span class="tags">
                        {{ post.tags.labels|raw }}
                    </span>
                {% endif %}

            </div>
        </div>
    {% endfor %}
</section>
