<section id="posts">
    {% for post in posts %}
        <div class="post">

            <h1 class="title">
                <a href="{{ post.url }}">
                    {{ post.title }}
                </a>
            </h1>

            <p>
                {{ post.excerpt|raw }}
            </p>

            <div class="meta">
                <span class="date">
                    {{ post.created_at|date(config_get('streams.date_format')) }}
                </span>

                {% if post.category_id %}
                    <span class="category">
                        {{ post.category.name }}
                    </span>
                {% endif %}

                {% if post.tags %}
                    <span class="tags">
                        {% for tag in post.tags.value %}
                            {% if not loop.first %}, {% endif %}
                            <span>{{ tag }}</span>
                        {% endfor %}
                    </span>
                {% endif %}

            </div>
        </div>
    {% endfor %}
</section>
